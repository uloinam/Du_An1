<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/image_product"
    android:layout_width="150dp"
    android:layout_height="150dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/tv_Name_Product"
        android:text="Null"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_product"
        app:layout_constraintTop_toTopOf="@id/image_product"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_Price_Product"
        android:text="Null"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/image_product"
        app:layout_constraintTop_toBottomOf="@id/tv_Name_Product"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/btn_remove_Count_Product"
        android:layout_width="30dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/image_product"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_height="30dp"/>
    <EditText
        android:id="@+id/id_edt_Count_Product"
        android:background="@drawable/border_edt_search"
        android:backgroundTint="@color/blueIndex"
        app:layout_constraintTop_toTopOf="@id/btn_remove_Count_Product"
        app:layout_constraintStart_toEndOf="@id/btn_remove_Count_Product"
        app:layout_constraintBottom_toBottomOf="@id/btn_remove_Count_Product"
        android:layout_width="50dp"
        android:layout_marginStart="15dp"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/btn_add_Count_Product"
        android:layout_width="30dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/id_edt_Count_Product"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_height="30dp"/>
    <ImageView
        android:id="@+id/btn_Cancel"
        android:layout_width="30dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_cancel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_height="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
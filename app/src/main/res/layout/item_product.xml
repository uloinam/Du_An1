<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        app:cardCornerRadius="10dp"
        android:padding="10dp"
        android:background="@color/color_Border_Image_Product"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/image_product"

            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="250dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/giamGia_SanPham"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="900000đ"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/giamGoc_SanPham"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:gravity="end"
            android:layout_weight="1"
            android:text="10000000đ"
            android:textColor="@color/gray"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tenSanPham"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Null"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tonKho"
            android:paddingLeft="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Kho: 100"
            android:gravity="end"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>